@model List<FaturaYonetimSistemi.Shared.Dtos.DaireDtos.ListDaireDto>

<a class="btn btn-primary btn-block" asp-action="Add" asp-controller="Daire">Yeni</a>
<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Blok</th>
            <th>Kat</th>
            <th>Daire No</th>
            <th>Tipi</th>
            <th>Sahibi Mi?</th>
            <th>Boş Mu?</th>
            <th>Toplam Daire</th>
            <th>Dolu Daire</th>
            <th>Boş Daire</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
           
            <td>@item.Blok</td>
            <td>@item.Kat</td>
            <td>@item.DaireNo</td>
            <td>@item.Tipi</td>
            <td>@item.SahibiMi</td>
            <td>@item.BosMu</td>
            <td>@item.ToplamDaire</td>
            <td>@item.DoluDaire</td>
            <td>@item.BosDaire</td>
            <td><a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@item.ID">Güncelle</a></td>
            <td><a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">Sil</a></td>

        </tr>
        }
    </tbody>
</table>