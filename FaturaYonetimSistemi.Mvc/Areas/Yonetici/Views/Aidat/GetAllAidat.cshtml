@model List<FaturaYonetimSistemi.Shared.Entities.Aidat>


<a class="btn btn-primary btn-block" asp-action="AddAidat" asp-controller="Aidat">Yeni</a>
<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Dönem</th>
            <th scope="col">Tutar</th>
            <th scope="col">Son Ödeme Tarihi</th>
            <th scope="col">Oluşturulma Tarihi</th>
            <th scope="col">Açıklama</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ID</td>
            <td>@item.Donem</td>
            <td>@item.Tutar</td>
            <td>@item.SonOdemeTarihi</td>
            <td>@item.OlusturmaTarihi</td>
            <td>@item.Aciklama</td>
            <td><a class="btn btn-warning" asp-action="UpdateAidat" asp-route-id="@item.ID">Güncelle</a></td>
            <td><a class="btn btn-danger" asp-action="DeleteAidatGet" asp-route-id="@item.ID">Sil</a></td>
        </tr>
        }
    </tbody>
</table>
