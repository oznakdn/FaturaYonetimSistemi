@model List<FaturaYonetimSistemi.Shared.Dtos.FaturaDtos.ListFaturaDto>

<a class="btn btn-success btn-block" asp-action="Add" asp-controller="Fatura">Yeni</a>
<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Fatura</th>
            <th>Tutar</th>
            <th>Son Ödeme Tarihi</th>
            <th>Açıklama</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.FaturaAdi</td>
            <td>@item.Tutar</td>
            <td>@item.SonOdemeTarihi</td>
            <td>@item.Aciklama</td>
            <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Güncelle</a></td>
            <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a></td>
        </tr>
        }
    </tbody>
</table>
