@model FaturaYonetimSistemi.Shared.Dtos.FaturaDtos.UpdateFaturaDto

<div class="col-md">
    <form asp-action="Update" asp-controller="Fatura" method="post" class="w-50">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label>Fatura Adı</label>
            <input type="text" asp-for="FaturaAdi" class="form-control" />
            <span asp-validation-for="FaturaAdi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Tutar</label>
            <input type="text" asp-for="Tutar" class="form-control" />
            <span asp-validation-for="Tutar"></span>
        </div>
        <div class="form-group">
            <label>Son Ödeme Tarihi</label>
            <input type="date" asp-for="SonOdemeTarihi" value="" class="form-control" />
            <span asp-validation-for="SonOdemeTarihi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Açıklama</label>
            <input type="text" asp-for="Aciklama" value="" class="form-control" />
            <span asp-validation-for="Aciklama" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="AktifMi" class="form-check-input" />
            <label class="form-check-label">Aktif Mi?</label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a class="btn btn-info" asp-action="GetAll" asp-controller="Fatura">Geri</a>
        </div>
    </form>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
