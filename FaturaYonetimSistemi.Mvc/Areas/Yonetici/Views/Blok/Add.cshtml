@model FaturaYonetimSistemi.Shared.Dtos.BlokDtos.InsertBlokDto

<div class="col-md-12">
    <div asp-validation-summary="ModelOnly"></div>
    <form class="w-50" asp-action="Add" asp-controller="Blok" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Blok Adı</label>
            <span asp-validation-for="BlokAdi"></span>
            <input type="text" class="form-control" asp-for="BlokAdi" />
        </div>
        <div class="form-group">
            <label>Toplam Daire</label>
            <span asp-validation-for="ToplamDaire"></span>
            <input type="text" class="form-control" value="" asp-for="ToplamDaire" />
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="AktifMi"/>
            <label>Aktif Mi?</label>
        </div>

        <div class="form-group">
            <button class="btn btn-info" type="submit">Kaydet</button>
        </div>
    </form>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>