@model FaturaYonetimSistemi.Shared.Dtos.BlokDtos.UpdateBlokDto

<div class="col-md-12">
    <input type="hidden" asp-for="Id"/>
    <form class="w-50" asp-action="Update" asp-controller="Blok" enctype="multipart/form-data">
        <div class="form-group">
            <label>Blok Adı</label>
            <span asp-validation-for="BlokAdi"></span>
            <input type="text" asp-for="BlokAdi" class="form-control" />
        </div>
        <div class="form-group">
            <label>Toplam Daire</label>
            <span asp-validation-for="ToplamDaire"></span>
            <input type="text" asp-for="ToplamDaire" class="form-control" />
        </div>

        <div class="form-check">
            <input type="checkbox" asp-for="AktifMi" class="form-check-input" />
            <label>Aktif Mi?</label>
        </div>
        <div class="form-group">
            <button class="btn btn-success" type="submit">Kaydet</button>
            <a class="btn btn-info" asp-action="GetAll" asp-controller="Blok">Geri</a>
        </div>

    </form>

</div>
