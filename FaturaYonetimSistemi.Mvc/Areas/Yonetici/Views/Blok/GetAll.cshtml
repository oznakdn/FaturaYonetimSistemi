@model List<FaturaYonetimSistemi.Shared.Dtos.BlokDtos.ListBlokDto>


<a class="btn btn-primary btn-block" asp-action="Add" asp-controller="Blok" asp-area="Yonetici">Yeni</a>
<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Id</th>
            <th>Blok Adı</th>
            <th>Toplam Daire</th>
            <th>Oluşturma Tarihi</th>
            <th>Güncelleme Tarihi</th>
            <th>Aktif Mi?</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.BlokAdi</td>
            <td>@item.ToplamDaire</td>
            <td>@item.OlusturmaTarihi</td>
            <td>@item.GuncellemeTarihi</td>
            <td>@item.AktifMi</td>
            <td><a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Update" asp-controller="Blok">Güncelle</a></td>
            <td><a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Blok">Sil</a></td>
        </tr>
        }

    </tbody>

</table>
